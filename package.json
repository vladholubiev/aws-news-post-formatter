{
  "name": "@vladholubiev/aws-news-post-formatter",
  "version": "0.0.2",
  "description": "Formats & fixes HTML from AWS News API",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "hello@vladholubiev.com",
    "url": "https://vladholubiev.com"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && yarn build:code",
    "build:code": "babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "yarn test --coverage",
    "lint": "yarn lint:ci --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "TZ=UTC jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,json}": [
      "eslint --fix"
    ],
    ".circleci/config.yml": [
      ".husky/validate-circleci-config.sh"
    ]
  },
  "babel": {
    "extends": "@shelf/babel-config/backend"
  },
  "prettier": "@shelf/prettier-config",
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "js-beautify": "1.14.7"
  },
  "devDependencies": {
    "@babel/cli": "7.21.0",
    "@babel/core": "7.21.0",
    "@shelf/babel-config": "1.2.0",
    "@shelf/eslint-config": "2.29.0",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.11",
    "@types/jest": "29.4.0",
    "@types/jest-environment-puppeteer": "5.0.3",
    "@types/jest-image-snapshot": "6.1.0",
    "@types/js-beautify": "1.13.3",
    "@types/node": "18",
    "eslint": "8.35.0",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "jest-image-snapshot": "6.1.0",
    "jest-puppeteer": "7.0.1",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "puppeteer": "19.7.2",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
